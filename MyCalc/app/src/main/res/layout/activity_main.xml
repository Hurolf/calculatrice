<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005677">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="400dp"
        android:layout_height="351dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="UnknownId">

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="136dp"
            android:layout_height="60dp"
            android:background="#0da3dd"
            android:text="+"
            app:layout_column="3"
            app:layout_row="2"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnEgal"
            android:layout_width="136dp"
            android:layout_height="139dp"
            android:background="#e2051b"
            android:text="="
            app:layout_column="3"
            app:layout_columnSpan="5"
            app:layout_row="3"
            app:layout_rowSpan="5"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:backgroundTint="#0da3dd"
            android:text="C"
            app:layout_column="0"
            app:layout_row="0"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/btnFois"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:backgroundTint="#0da3dd"
            android:text="X"
            app:layout_column="1"
            app:layout_row="0"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:backgroundTint="#0da3dd"
            android:text="/"
            app:layout_column="2"
            app:layout_row="0"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnDel"
            android:layout_width="134dp"
            android:layout_height="60dp"
            android:background="#0da3dd"
            android:text="←"
            app:layout_column="3"
            app:layout_row="0"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnVirgule"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="."
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="4"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="0"
            app:layout_column="1"
            app:layout_row="4"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnPourcent"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="%"
            app:layout_column="2"
            app:layout_row="4"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btnMoins"
            android:layout_width="136dp"
            android:layout_height="59dp"
            android:background="#0da3dd"
            android:text="-"
            app:layout_column="3"
            app:layout_row="1"
            tools:ignore="HardcodedText"/>

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/screenRes"
        android:layout_width="331dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="70dp"
        android:gravity="right"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="@id/gridLayout2"
        app:layout_constraintStart_toStartOf="@id/gridLayout2" />

    <TextView
        android:id="@+id/screenOp"
        android:layout_width="331dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="128dp"
        android:gravity="right|left"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="@id/gridLayout2"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@id/gridLayout2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

</androidx.constraintlayout.widget.ConstraintLayout>